{
  "extends": "@repo/typescript-config/bun.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@infra": [
        "src/infra"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@web/*": [
        "src/web/*"
      ],
      // Other packages
      "@contract/*": [
        "../../packages/contract/src/*"
      ],
      "@domain/*": [
        "../../packages/domain/src/*"
      ],
      "@application/*": [
        "../../packages/application/src/*"
      ],
    }
  },
  "include": [
    "src",
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    ".git",
    "dist"
  ]
}