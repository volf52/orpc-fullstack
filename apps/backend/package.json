  "description": "API server for the project",
  "packageManager": "bun@1.2.18",
  "type": "module",
  "scripts": {
    "build": "bun build --target bun --outfile dist/server.js ./src/web/server.ts",
    "dev": "bun run --hot src/web/server.ts",
    "start": "node dist/server.js",
    "db:studio": "drizzle-kit studio",
